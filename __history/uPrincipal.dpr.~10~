program uPrincipal;

uses
  Vcl.Forms,
  uFrmCdPessoa in 'uFrmCdPessoa.pas' {FrmCdPessoa},
  uPessoa in 'uPessoa.pas',
  uUtils in 'uUtils.pas',
  uConnection in 'uConnection.pas' {DataModuleConexao: TDataModule};

{$R *.res}

begin
  Application.Initialize;
  Application.MainFormOnTaskbar := True;
  Application.CreateForm(TFrmCdPessoa, FrmCdPessoa);
  Application.CreateForm(TDataModuleConexao, DataModuleConexao);
  Application.Run;
  ReportMemoryLeaksOnShutdown := True;
end.
